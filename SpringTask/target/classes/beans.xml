<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <bean id="actor1" class="com.stackroute.Actor" >
        <property name="name" value="Suti"></property>
        <property name="gender" value="Male"></property>
        <property name="age" value="22"></property>
    </bean>


    <bean id="movie" class="com.stackroute.Movie" autowire="constructor"></bean>
    <bean id="beanLifecycleDemoBean" class="com.stackroute.BeanLifecycleDemoBean" init-method="customInit" destroy-method="customDestroy"></bean>
    <bean id="beanPostProcessorDemoBean"   class="com.stackroute.BeanPostProcessorDemoBean"></bean>

</beans>

